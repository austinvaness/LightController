<ui:FluentWindow x:Class="LightController.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightController" 
        xmlns:controls="clr-namespace:LightController.Controls"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="DMX Preview" Height="450" Width="800" Closing="OnWindowClosing"
                 
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <StackPanel>
        <ui:TitleBar Title="DMX Preview"/>
        <ScrollViewer x:Name="fixtureScrollBox" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid x:Name="fixtureGrid" Margin="10">
            </Grid>
        </ScrollViewer>
    </StackPanel>
</ui:FluentWindow>
