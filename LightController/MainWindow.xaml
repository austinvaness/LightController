<Window x:Class="LightController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightController" xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="mainWindow_Closing">
    <Grid>
        <ComboBox x:Name="listScene" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="331,33,0,0" IsEnabled="False"/>
        <Label x:Name="labelScene" Content="Active scene:" HorizontalAlignment="Left" Margin="331,7,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.585,-0.11"/>
        <colorpicker:StandardColorPicker x:Name="colorPicker" Width="200" Height="380" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="108,33,0,0"/>
        <ListBox x:Name="mediaList" Margin="331,63,10,10"/>
        <Button x:Name="btnOpenConfig" Content="Open Config" HorizontalAlignment="Left" Margin="24,23,0,0" VerticalAlignment="Top" Click="btnOpenConfig_Click"/>
        <Button x:Name="btnRestart" Content="Restart" HorizontalAlignment="Left" Margin="24,48,0,0" VerticalAlignment="Top" Click="btnRestart_Click"/>
        <Button x:Name="btnTurnOff" Content="Exit" HorizontalAlignment="Left" Margin="24,73,0,0" VerticalAlignment="Top" Click="btnTurnOff_Click"/>
        <Button x:Name="btnSaveConfig" Content="Save" HorizontalAlignment="Left" Margin="100,23,0,0" VerticalAlignment="Top" Click="btnSaveConfig_Click"/>
    </Grid>
</Window>
