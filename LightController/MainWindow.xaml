<Window x:Class="LightController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightController" xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="listScene" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,36,0,0"/>
        <Label x:Name="labelScene" Content="Active scene:" HorizontalAlignment="Left" Margin="300,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.585,-0.11"/>
        <colorpicker:StandardColorPicker x:Name="colorPicker" Width="200" Height="380" Margin="10,10,590,44"/>
    </Grid>
</Window>
